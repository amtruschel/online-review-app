<!DOCTYPE html>
<html>
  <head>
    <title>review stuff</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application','https://fonts.googleapis.com/css?family=Ubuntu|Fredericka+the+Great|Nanum+Pen+Script|Montserrat', 'https://use.fontawesome.com/releases/v5.7.2/css/all.css', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body id="body">
    <%= render "layouts/navbar" %>
    <div class="row m-2">
    </div>
    <div class="container-fluid" id="site-contents">
      <div class="row">
        <div class="col-lg-2" id="sidebar">
          <%= render 'layouts/sidebar' %>
        </div>
        <div class="col-lg-10">
          <% flash.each do |key, value| %>
            <div class="flash <%= key %> alert alert-dismissible fade show align-middle" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <%= value %><a id="flash-msg" href="#" class="close" data-dismiss="alert"></a>
            </div>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
