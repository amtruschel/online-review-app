<!DOCTYPE html>
<html>
  <head>
    <title>OnlineReviewSite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application','https://fonts.googleapis.com/css?family=Ubuntu', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body id="body">
    <%= render "layouts/navbar" %>
    <div class="row m-2">
      <div class="col">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %> alert alert-dismissible fade show align-middle" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <%= value %><a id="flash-msg" href="#" class="close" data-dismiss="alert"></a>
          </div>
        <% end %>
      </div>
    </div>
    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>
