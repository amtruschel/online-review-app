<div class="row d-flex">
  <div class="col-lg-2"></div>
  <div class="col-lg-8">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= image_tag("coffee3.jpg", alt: "coffee") %>
        </div>
        <div class="carousel-item">
          <%= image_tag("cafe3.jpg", alt: "cafe") %>
        </div>
        <div class="carousel-item">
          <%= image_tag("pub3.jpg", alt: "pub") %>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
  <div class="col-lg-2"></div>
</div>
<div class="row d-flex mt-3">
  <div class="col text-center">
    <%= form_tag("/reviews_search", method: "get", class: "reviews-search form-group") do %>
      <%= label_tag(:q, "search for reviews", class: "mr-2") %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("search", class: "btn btn-primary ml-1")%>
    <% end %>
  </div>
</div>
<div class="row d-flex mt-3">
  <div class="col lg-1"></div>
  <div class="col-sm-5">
    <h2>recent reviews</h2>
      <% @reviews.each do |review| %>
        <ul class="reviews-list">
          <li><a href="/reviews/<%= review.id %>"><%= review.title %></a></li>
        </ul>
      <% end %>
  </div>
  <div class="col-sm-5">
    <% if !current_user.nil? %>
      <% if !@user_reviews.empty? %>
        <h2>my reviews</h2>
          <% @user_reviews.each do |review| %>
            <ul class="reviews-list">
              <li><a href="/reviews/<%= review.id %>"><%= review.title %></a></li>
            </ul>
          <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="col lg-1"></div>
</div>
