<div class="col-sm-6">
  <% if @search_results.empty? %>
    <h2>sorry, no results found for "<%= params[:q] %>"</h2>
  <% else %>
    <h2>search results for "<%= params[:q] %>"</h2>
    <% @search_results.each do |review| %>
      <ul class="reviews-list">
        <li><a href="/reviews/<%= review.id %>"><%= review.title %></a></li>
      </ul>
    <% end %>
  <% end %>
</div>
